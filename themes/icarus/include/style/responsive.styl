/* ---------------------------------
 *         Responsive Layout
 * --------------------------------- */
+widescreen()
    .is-1-column .container, .is-2-column .container
        max-width: $widescreen  - 1 * $gap
        width: $widescreen  - 1 * $gap

+fullhd()
    .is-2-column .container
        max-width: $fullhd  - 1 * $gap
        width: $fullhd  - 1 * $gap

    .is-1-column .container
        max-width: $desktop - 1 * $gap
        width: $desktop - 1 * $gap

+tablet()
    .is-sticky
        position: -webkit-sticky
        position: sticky
        top: 1.5rem
        z-index: 99

    .column-main, .column-left, .column-right, .column-right-shadow
        &.is-sticky
            top: .75rem
            align-self: flex-start

+mobile()
    .section
        padding: 1.5rem 1rem
